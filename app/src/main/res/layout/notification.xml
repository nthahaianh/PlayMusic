<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp"
    android:paddingVertical="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/notification_btnPrevious_song"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_tvTitle"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/notification_tvText"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:padding="3dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/notification_btnPrevious_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/notification_btnPlay"
        android:background="@drawable/background"
        android:padding="3dp"
        android:src="@drawable/ic_skip_previous" />

    <ImageView
        android:id="@+id/notification_btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/notification_btnNext_song"
        android:background="@drawable/background"
        android:padding="5dp"
        android:src="@drawable/ic_play_arrow" />

    <ImageView
        android:id="@+id/notification_btnNext_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/notification_btnClose"
        android:background="@drawable/background"
        android:padding="3dp"
        android:src="@drawable/ic_skip_next" />

    <ImageView
        android:id="@+id/notification_btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:background="@drawable/background"
        android:padding="3dp"
        android:src="@drawable/ic_close" />
</RelativeLayout>